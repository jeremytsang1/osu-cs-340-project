<div class="table">
  <form action="/manifests" method="POST" id="manifest">

    <legend><strong>Add a new Manifest</strong></legend>

    (Please note that a trooper or a droid may be associated with more than one ship.)

    <!-- ship and occupant adding field -->
    <div>
      <label>
	<input type="number" name="ship"> Ship ID
      </label>

      <br>

      <label>
	<input type="number" name="occupant"> Occupant ID
      </label>
    </div>

    <label>
      <input type="radio" name="occupantChoice" class="radio_b" value="trooper" checked/> Trooper
    </label>

    <label>
      <input type="radio" name="occupantChoice" class="radio_b" value="droid"> Droid
    </label>

    {{!-- </div> --}}

    <div>
      <button name="postButton" value="insert">add</button>
      <button name="postButton" value="delete">remove</button>
    </div>
  </form>
</div>

<div class="db">
  <legend><strong>M:M - Ships and Troopers</strong></legend>
  <table>
    <thead>
      <tr>
	<th>Ship ID</th>
	<th>Ship Type</th>
	<th>Trooper ID</th>

      </tr>
    </thead>

    <tbody>
      {{#each ships_troopers}}
	<tr>
	  <td>{{'Ship ID'}}</td>
	  <td>{{'Ship Type'}}</td>
	  <td>{{'Trooper ID'}}</td>

	</tr>
      {{/each}}
    </tbody>
  </table>
</div>

